@model SubscriptionMonitoringSys.MVC.Models.UserModel

@{
    ViewData["Title"] = "Update User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="header">
    <h1 class="fs-1">Update User Details</h1>
</div>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            
            <form asp-action="Update" class="p-4 rounded shadow" style="background-color: #f8f9fa;">
                <input asp-for="UserId" value="@Model.UserId" type="hidden" />
                <input asp-for="UserCreatedAt" value="@Model.UserCreatedAt" type="hidden" />
                <input asp-for="UserPasswordHash" value="@Model.UserPasswordHash" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-4 pb-2">
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label pb-2">User Name</label>
                            <input asp-for="UserName" class="form-control pb-2" required />
                            <span asp-validation-for="UserName" class="text-danger pb-2"></span>
                        </div>
                    </div>
                    <div class="col-md-4 pb-2">
                        <div class="form-group">
                            <label asp-for="UserEmail" class="control-label pb-2">Email</label>
                            <input asp-for="UserEmail" type="text" class="form-control pb-2" required />
                            <span asp-validation-for="UserEmail" class="text-danger pb-2"></span>
                        </div>
                    </div>
                    
                    <div class="form-group col-md-4 mb-2">
                        <label asp-for="Role" class="control-label pb-2">Role</label>
                        <select asp-for="Role" class="form-control" required>
                            <option value="">Select Status</option>
                            <option value="company">Company</option>
                            <option value="User">User</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                </div>
                

                <div class="form-group text-center">
                    <input type="submit" value="Submit" class="button-34 mt-2" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/Register.js"></script>
}
@section Styles {
    <link rel="stylesheet" href="~/css/Register.css" />
 }
