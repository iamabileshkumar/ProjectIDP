@model SubscriptionMonitoringSys.MVC.Models.RegisterModel

@{
    ViewData["Title"] = "CompanyUserRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userRole = Context.Session.GetString("Role");
    var userId = Context.Session.GetString("ProjectId");
    
    
}


@if (userRole == "company")
{
    <br />
    <div class="header">
        <h1 class="fs-1">Register Projects User</h1>
    </div>

    <hr />
    <div class="container">
        <div class="row justify-content-center">
                
                <form asp-action="CompanyUserRegister" class="p-4 rounded shadow" style="background-color: #f8f9fa;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                        
                            <div class="form-group">
                                <label asp-for="UserId" class="control-label pb-2">User Id</label>
                                <input asp-for="UserId" class="form-control pb-2" value="@userId" readonly/>
                                <span asp-validation-for="UserId" class="text-danger pb-2"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserName" class="control-label pb-2">User Name</label>
                                <input asp-for="UserName" class="form-control pb-2" />
                                <span asp-validation-for="UserName" class="text-danger pb-2"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserEmail" class="control-label pb-2">Email</label>
                                <input asp-for="UserEmail" class="form-control pb-2" />
                                <span asp-validation-for="UserEmail" class="text-danger pb-2"></span>
                            </div>
                  
                   
                            <div class="form-group">
                                <label asp-for="UserPassword" class="control-label pb-2">Password</label>
                                <input asp-for="UserPassword" type="password" class="form-control pb-2" />
                                <span asp-validation-for="UserPassword" class="text-danger pb-2"></span>
                            </div>
                        
                        
                    

                    <div class="form-group text-center">
                        <input type="submit" value="Submit" class="button-34 mt-2" />
                    </div>
                </form>
            </div>
        </div>
}

@section Scripts {
    <script src="~/js/Table.js"></script>
}
@section Styles {
    <link rel="stylesheet" href="~/css/Register.css" />
 }
