@model SubscriptionMonitoringSys.MVC.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section class="home">
    <div class="form_container">
        <i class="uil uil-times form_close"></i>

        <div class="form login_form">
            <form asp-action="Login">
                <h2>Login</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input_box">
                    <input asp-for="LoginUserId" type="text" class="form-control" placeholder="Enter your UserId" required />
                    <span asp-validation-for="LoginUserId" class="text-danger"></span>
                    <i class="uil uil-envelope-alt email"></i>
                </div>
                <div class="input_box">
                    <input asp-for="LoginUserPassword" class="form-control" type="password" placeholder="Enter your password" required />
                    <span asp-validation-for="LoginUserPassword" class="text-danger"></span>
                    <i class="uil uil-lock password"></i>
                    <i class="uil uil-eye-slash pw_hide"></i>
                </div>
                <div class="option_field">
                    <span class="checkbox">
                        <input type="checkbox" id="check" value="1"/>
                        <label for="check">Remember me</label>
                    </span>
                    <a href="#" class="forgot_pw">Forgot password?</a>
                </div>
                <button class="button">Login Now</button>
                <div class="login_signup">Don't have an account? <a href="/UserAuth/Register" id="signup">Signup</a></div>
            </form>
        </div>

    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" />
 }

